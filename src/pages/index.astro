---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
---

<!doctype html>
<html>
  <Header title="Kevin Lin" />
  <body>
    <div class="content">
      <Sidebar selectedItem="home" />
      <nav class="main">
        <div class="container">
          <main class="fold-content-container">
            <div class="fold-content">
              <h1>Hi, I'm Kevin.</h1>
              <p class="lead">
                As a senior <strong>Computer Science</strong> student at <strong
                  >NC State University</strong
                > (Class of 2026), I love learning every aspect of the tech stack.
                My interests range from the granular details of <strong
                  >computer networking</strong
                >, operating systems, and assembly to the broader scope of <strong
                  >full stack development</strong
                >, AI, and cloud computing.
                <br /><br />
                I currently apply this curiosity as an intern at <strong
                  >Owl Cyber Defense</strong
                >. When I'm away from the keyboard, I'm usually taking photos or
                working with the Liquid Rocketry club.
              </p>
            </div>
            <div class="action-buttons">
              <div class="contact-section">
                <h3>Contact</h3>
                <div class="contact-details">
                  <p>
                    <span class="label">
                      <img
                        src="/assets/at-solid.svg"
                        loading="eager"
                        alt=""
                        class="nav-link-image"
                      />
                    </span>
                    2004klin@gmail.com
                  </p>
                  <p>
                    <a
                      href="https://linkedin.com/in/04klin"
                      target="_blank"
                      class="clean-link"
                    >
                      <img
                        src="/assets/linkedin-logo.svg"
                        loading="eager"
                        alt="LinkedIn"
                        class="nav-link-image"
                      />
                      04klin
                    </a>
                  </p>
                </div>
                <br />
                <div class="resume-section">
                  <p>
                    <a
                      href="/assets/kevin_lin_resume_2026.pdf"
                      target="_blank"
                      class="button">View my Resume &rarr;</a
                    >
                  </p>
                </div>
              </div>
            </div>

            <br />

            <div class="projects-section">
              <!-- Work Experience -->
              <a href="/work-experience" class="projects-container">
                <div class="single-projects-category">
                  <div class="projects-category-image-container">
                    <img
                      src="/assets/browser.svg"
                      loading="lazy"
                      alt=""
                      class="projects-category-image"
                    />
                  </div>
                </div>
                <div class="single-projects-content">
                  <h4>Work Experience</h4>
                  <div class="tech-tools-container">
                    <div class="mini-label-white gray-color">
                      Technologies &amp; tools
                    </div>
                    <div class="chips-container chips-container-small-width">
                      <div class="single-chip small-chip">Rust</div>
                      <div class="single-chip small-chip">Python</div>
                      <div class="single-chip small-chip">JavaScript</div>
                      <div class="single-chip small-chip">TypeScript</div>
                      <div class="single-chip small-chip">React</div>
                      <div class="single-chip small-chip">MongoDB</div>
                      <div class="single-chip small-chip">Pytest</div>
                      <div class="single-chip small-chip">Podman</div>
                      <div class="single-chip small-chip">Git</div>
                    </div>
                  </div>
                </div>
              </a>

              <!-- Projects -->
              <a href="/projects" class="projects-container">
                <div class="single-projects-category">
                  <div class="projects-category-image-container">
                    <img
                      src="/assets/database.svg"
                      loading="lazy"
                      alt=""
                      class="projects-category-image"
                    />
                  </div>
                </div>
                <div class="single-projects-content">
                  <h4>Projects</h4>
                  <div class="tech-tools-container">
                    <h5>Academic & Personal</h5>

                    <div class="mini-label-white gray-color mt-2">
                      Technologies &amp; tools
                    </div>
                    <div class="chips-container chips-container-small-width">
                      <div class="single-chip small-chip">Java</div>
                      <div class="single-chip small-chip">Docker</div>
                      <div class="single-chip small-chip">Postgres</div>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </main>
        </div>
      </nav>

      <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
    </div>
  </body>
</html>
