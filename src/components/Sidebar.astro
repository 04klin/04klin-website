---
const { selectedItem } = Astro.props;
---

<aside
  data-animation="default"
  data-collapse="medium"
  data-duration="400"
  data-easing="ease"
  data-easing2="ease"
  role="banner"
  class="sidebar w-nav"
>
  <div class="nav-content">
    <a href="/" class="w-nav-brand" aria-label="home">
      <div class="niv-data">
        <img
          src="/assets/tokyo_pfp.png"
          loading="eager"
          alt="Profile picture"
          class="niv-image"
        />
        <div>
          <div class="label-white">Kevin Lin</div>
          <div class="label-gray">Computer Science Student</div>
        </div>
      </div>
    </a>

    <nav role="navigation" class="w-nav-menu">
      <a
        href="/"
        class={`nav-link-container w-inline-block ${
          selectedItem === "home" ? "w--current" : ""
        }`}
      >
        <img
          src="/assets/icons/home.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Home</div>
      </a>
      <a
        href="/work-experience"
        class={`nav-link-container w-inline-block ${
          selectedItem === "work-experience" ? "w--current" : ""
        }`}
        aria-current={selectedItem === "work-experience" ? "page" : undefined}
      >
        <img
          src="/assets/icons/code.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Work Experience</div>
      </a>
      <a
        href="/projects"
        class={`nav-link-container w-inline-block ${
          selectedItem === "projects" ? "w--current" : ""
        }`}
      >
        <img
          src="/assets/icons/code-solid.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>projects</div>
      </a>
      <a
        href="/photography"
        class={`nav-link-container w-inline-block ${
          selectedItem === "photography" ? "w--current" : ""
        }`}
      >
        <img
          src="/assets/icons/camera-solid-full.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>photography</div>
      </a>
    </nav>

    <div
      class="navbar-icon-button w-nav-button"
      style="-webkit-user-select: text;"
      aria-label="menu"
      role="button"
      tabindex="0"
    >
      <img
        src="/assets/icons/menu.svg"
        loading="eager"
        alt=""
        class="navbar-icon"
      />
    </div>
  </div>

  <script>
    import { setupNav } from "../scripts/nav.js";

    let cleanup;
    document.addEventListener("astro:page-load", () => {
      if (cleanup) cleanup();
      cleanup = setupNav();
    });

    document.addEventListener("astro:before-swap", () => {
      if (cleanup) cleanup();
    });
  </script>
</aside>
